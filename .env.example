# Environment Configuration for Inventory System
# Copy to .env and modify as needed

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/inventory?sslmode=disable

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_EVENTS_TOPIC=inventory.events
KAFKA_STATE_TOPIC=inventory.state
KAFKA_CONSUMER_GROUP=inventory-processor

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SEC=300

# Rate Limiting
RATE_LIMIT=100

# Server Configuration
SERVER_ADDR=0.0.0.0

# Queue Service (default port)
SERVER_PORT=8080

# Reader Service (use different port)
SERVER_PORT=8082

# Business Logic
RESERVATION_TTL_SEC=300

# Service Name (for logging/monitoring)
SERVICE_NAME=inventory-service

# Logging
LOG_LEVEL=info

# Development vs Production
ENVIRONMENT=development
